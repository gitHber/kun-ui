{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*", "docs"],
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "verifyAccess": false,
      "verifyRegistry": false,
      "message": "chore: publish",
      "allowBranch": "master",
      "conventionalCommits": true
    }
  }
}
